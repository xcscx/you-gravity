<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itegg.yougravitybackend.mapper.basic.UserRoleMapper">

    <resultMap id="BaseResultMap" type="com.itegg.yougravitybackend.model.entity.basic.UserRole">
        <id property="id" column="id" />
        <result property="userId" column="user_id" />
        <result property="roleId" column="role_id" />
        <result property="createTime" column="create_time" />
        <result property="updateTime" column="update_time" />
        <result property="removeFlag" column="remove_flag" />
    </resultMap>

    <sql id="Base_Column_List">
        id,`user_id`,`role_id`,
        create_time,update_time,remove_flag
    </sql>

    <select id="getUserRole" resultType="com.itegg.yougravitybackend.model.vo.user.UserRoleVO">
        SELECT ur.user_id AS userId,
               ur.role_id AS roleId,
               r.role_code AS roleCode,
               r.role_name AS roleName
        FROM basic_user_role ur
                 LEFT JOIN basic_role r ON ur.role_id = r.id
        WHERE ur.remove_flag = 0
          AND r.remove_flag = 0
          AND ur.user_id = #{userId}
    </select>

</mapper>
